<div class="container showcontainer">

	<div class="row">

		<div class="col-xs-8" id="middle">
				<h3><%= @joke.description %></h3>
				<%= video_tag(@joke.video.url, size: "620x320", class: "video-js vjs-default-skin vjs-big-play-centered stylevideo", controls:true) %>
							
							<div class="row" id="viewrow">						
									<div class="lead" id="view">Views: <%= @joke.views %></div>
							</div>
							<div class="row" id="uprow">						
									<div><strong>Uploaded: <%= @joke.created_at.strftime("%b %e,%l:%M %p") %></strong></div><br>
									<div><strong>By: <%= @joke.user_id %></strong></div>
							</div>
								<div class="row">
										<div class="col-xs-3 col-sm-3 funny">
											<%= link_to image_tag("Like_thumb.png", size: "100x100", :border => 0), new_vote_path(:vote => 1, :user_id => current_user, :joke_id => @joke.id), {:action => 'create', :controller => 'votes'}%> 
										</div>
										<div class="col-xs-6 col-sm-6 funny">
											<h2 id="words">Funny or Not?</h2>
										</div>
										<div class="col-xs-3 col-sm-3 funny">
											<%= link_to image_tag("like_thumbs_down.png", size: "100x100", :border => 0), new_vote_path(:vote => -1, :user_id => current_user, :joke_id => @joke.id), {:action => 'create', :controller => 'votes'}%>
										</div>
								</div>


					<div class="comments"> 	
									
							<h1>Comments:</h1>

							<%= form_for(@usercomment, url: {controller: "user_comments", action: "create"}) do %>
										<%= hidden_field_tag(:joke_id, @joke.id) %>
										<%= text_area_tag :description, nil, class: "form-control"  %><br>
										<%= submit_tag( "Submit Comment", class: "btn btn-danger") %>

							<% end %>
						<div class="container">
							<% @jokecomments.order("created_at desc").each do |jc| %>
								<p><%= jc.description %></p>
								<p>Posted: <%= jc.created_at.strftime("%b %e,%l:%M %p") %></p>
							<% end %>
						</div>	
					</div>


			</div>

			<div class="col-xs-4" id="trend">
				<% @trendingjokes.each do |tj| %>
					<div class="side"><%= video_tag(tj.video.url, size: "150x108") %></div>
					<div class="side" id="sidewords">
						<a href="#"><%= tj.description %></a>
						<p>Views: <%= tj.views %></p>
					</div>
				<% end %>	
			</div>

	</div>

</div>